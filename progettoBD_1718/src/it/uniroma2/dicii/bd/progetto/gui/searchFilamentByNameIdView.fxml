<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="window" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.uniroma2.dicii.bd.progetto.standardUser.SearchFilamentByNameIdController">
   <children>
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#gotoPreviousMenu" text="Indietro">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label layoutX="215.0" layoutY="58.0" prefHeight="27.0" prefWidth="171.0" text="Ricerca un filamento:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <RadioButton fx:id="rBtnNameSearch" layoutX="49.0" layoutY="143.0" mnemonicParsing="false" onAction="#disableIdSearchFields" selected="true" text="Per nome">
         <toggleGroup>
            <ToggleGroup fx:id="searchType" />
         </toggleGroup>
      </RadioButton>
      <Label layoutX="49.0" layoutY="114.0" text="Tipologia di ricerca:" />
      <RadioButton fx:id="rBtnIdSearch" layoutX="49.0" layoutY="171.0" mnemonicParsing="false" onAction="#disableNameSearchFields" text="Per Id" toggleGroup="$searchType" />
      <TextField fx:id="tvFilamentName" layoutX="95.0" layoutY="207.0" onKeyTyped="#clearErrorMessage" prefHeight="31.0" prefWidth="205.0" />
      <Label fx:id="labelFilamentName" layoutX="38.0" layoutY="212.0" text="Nome:" />
      <Label fx:id="labelFilamentId" disable="true" layoutX="378.0" layoutY="212.0" text="Id:" />
      <TextField fx:id="tvFilamentId" disable="true" layoutX="412.0" layoutY="207.0" onKeyTyped="#clearErrorMessage" prefHeight="31.0" prefWidth="150.0" />
      <ComboBox fx:id="cBoxFilamentInstrument" disable="true" layoutX="412.0" layoutY="252.0" prefWidth="150.0" />
      <Label fx:id="labelFilamentInstrument" disable="true" layoutX="321.0" layoutY="257.0" text="Strumento:" />
      <Button layoutX="255.0" layoutY="312.0" mnemonicParsing="false" onAction="#searchFilament" prefHeight="39.0" prefWidth="74.0" text="Cerca" />
      <Label fx:id="errorMessage" layoutX="33.0" layoutY="552.0" prefHeight="21.0" prefWidth="526.0" textFill="RED" />
      <ProgressIndicator fx:id="progressIndicator" layoutX="378.0" layoutY="312.0" prefHeight="52.0" prefWidth="91.0" progress="0.0" />
   </children>
</AnchorPane>
